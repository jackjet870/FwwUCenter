@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title 中国消费服务网会员中心</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="text-center">
            <h1></h1>
            <div class="row">
                <div class="col-md-5 col-md-offset-3 ">
                    <div class="panel panel-default">
                        <div class="panel-heading"><p class="help-block-left">会员中心登录</p></div>
                        <div class="panel-body">
                            <form role="form" class="form-vertical" method="post" action="/Home/SignIn">
                                <br />
                                <p class="help-block-right">

                                    <label class="radio-inline">
                                        <input type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1" checked>用户名登录
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2"> 会员卡登录
                                    </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    <a href="/Home/NewUser">快速注册</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="/Home/ForgetPWD">忘记密码</a>
                                </p>
                                <br />
                                <div class="form-group">
                                    <label class="sr-only" for="Username">Username</label>
                                    <input type="text" class="form-control input-lg" name="UserName" placeholder="用户名 或 会员卡号" autofocus>
                                </div>

                                <div class="form-group">
                                    <label class="sr-only" for="Password">Password</label>
                                    <input type="password" class="form-control input-lg" name="Password" placeholder="密码">
                                </div>

                                <button type="submit" class="btn btn-success btn-lg btn-block ">登录</button>
                                <br />

                               

                                <br />
                            </form>
                        </div>
                    </div>
                       
                </div>
                <div class="col-md-5 col-md-offset-3 ">
                    
                </div>
            </div>
        </div>
    </div>
            
</body>
</html>